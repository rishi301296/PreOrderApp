<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <solid android:color="#aa222331" />
            <stroke
                android:width="2dip"
                android:color="#55202020" />
            <corners android:radius="10dip" />
            <padding
                android:bottom="7dip"
                android:left="7dip"
                android:right="7dip"
                android:top="7dip" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <solid android:color="#dd222331" />
            <stroke
                android:width="2dip"
                android:color="#55202020" />
            <corners android:radius="10dip" />
            <padding
                android:bottom="7dip"
                android:left="7dip"
                android:right="7dip"
                android:top="7dip" />
        </shape>
    </item>
</selector>